<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <%- include('../partials/head') %>
</head>
<body id="grad">

<header>
    <%- include('../partials/header') %>
</header>

<div class="container">
    
    <div class="page-header page-title">
        <h1 class="title" id="page-title">Account Details</h1>
    </div>
    <div class="container account-details">
        <div class="row waypoint">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align:right">
                <h2 class="report-text-spacing">First Name: </h2>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" style="text-align:left">
                <h2 class="report-text-spacing"><%=scores[0].firstname %></h2>
            </div>
        </div>

        <div class="row waypoint">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align:right">
                <h2 class="report-text-spacing">Last Name: </h2>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" style="text-align:left">
                <h2 class="report-text-spacing"><%=scores[0].lastname %></h2>
            </div>
        </div>

        <div class="row waypoint">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align:right">
                <h2 class="report-text-spacing">Username: </h2>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" style="text-align:left">
                <h2 class="report-text-spacing"><%=username %> </h2>
            </div>
        </div>

        <div class="row waypoint">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="text-align:right">
                <h2 class="report-text-spacing">Email: </h2>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" style="text-align:left">
                <h2 class="report-text-spacing"><%=scores[0].email %> </h2>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 waypoint">
            <div class="jumbotron report-element" id="jumbo-test">
                <div class="report-heading"><h3>Bubble Sort</h3></div>
                <a href="/testbubble" class="btn btn-warning btn-lg" id="sort-buttons" role="button">Bubble Sort</a>
                <table class="table table-bordered">
                    <thead class = "text-center">
                    <tr>
                        <td colspan="2" class="table-title">Previous Attempts</td>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th class="text-center">Score</th>
                        <th class="text-center">Date Completed</th>
                    </tr>
                    <% if (login == null || login == false){ %>
                        <td colspan="2" class="text-left"> You need to login first</td>  
                    <% } %>  
                    <% if(typeof scores != "undefined"){ %>
                        <% var count = 0 %>
                         <% scores.forEach(function(score){ %>
                         <% if (score.testID == 1) {%>
                            <% count = count + 1 %>
                            <tr>
                                <td><%=score.score %></td>  
                                <td class ="text-right"><%= score.timeCompleted %></td>
                            </tr>
                            <% }%>
                            <% }); %>
                        <% if(count == 0) { %>
                            <td colspan="2" class="text-left"> You have no previous attempts</td>  
                        <% } %>
                    <%} %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 waypoint">
            <div class="jumbotron report-element" id="jumbo-test">
                <div class="report-heading"><h3>Merge Sort</h3></div>
                <a href="/testmerge" class="btn btn-warning btn-lg" id="sort-buttons" role="button">Merge Sort</a>
                <table class="table table-bordered">
                <thead class = "text-center">
                <tr>
                    <td colspan="2" class="table-title">Previous Attempts</td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th class="text-center">Score</th>
                    <th class="text-center">Date Completed</th>
                </tr>
                <% if (login == null || login == false){ %>
                    <td colspan="2" class="text-left"> You need to login first</td>  
                <% } %>  
                <% if(typeof scores != "undefined"){ %>
                    <% var count = 0 %>
                     <% scores.forEach(function(score){ %>
                     <% if (score.testID == 2) {%>
                        <% count = count + 1 %>
                        <tr>
                            <td><%=score.score %></td>  
                            <td class ="text-right"><%= score.timeCompleted.substring(0, 19) %></td>
                        </tr>
                        <% }%>
                        <% }); %>
                    <% if(count == 0) { %>
                        <td colspan="2" class="text-left"> You have no previous attempts</td>  
                    <% } %>
                <%} %>
                
                
                </tbody>
            </table>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 waypoint">
            <div class="jumbotron report-element" id="jumbo-test">
                <div class="report-heading"><h3>Quick Sort</h3></div>
                <a href="/testquick" class="btn btn-warning btn-lg" id="sort-buttons" role="button">Quick Sort</a>
                <table class="table table-bordered">
                <thead class = "text-center">
                <tr>
                    <td colspan="2" class="table-title">Previous Attempts</td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th class="text-center">Score</th>
                    <th class="text-center">Date Completed</th>
                </tr>
                <% if (login == null || login == false){ %>
                    <td colspan="2" class="text-left"> You need to login first</td>  
                <% } %>  
                <% if(typeof scores != "undefined"){ %>
                    <% var count = 0 %>
                     <% scores.forEach(function(score){ %>
                     <% if (score.testID == 3) {%>
                        <% count = count + 1 %>
                        <tr>
                            <td><%=score.score %></td>  
                            <td class ="text-right"><%= score.timeCompleted %></td>
                        </tr>
                        <% }%>
                        <% }); %>
                    <% if(count == 0) { %>
                        <td colspan="2" class="text-left"> You have no previous attempts</td>  
                    <% } %>
                <%} %>
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>

<footer>
    <%- include('../partials/footer') %>
</footer>

</body>
</html>